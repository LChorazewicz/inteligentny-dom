{% extends 'base.html.twig' %}

{% block title %}Device index{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>state</th>
                <th>deviceType</th>
                <th>pins</th>
                <th>Turns to open/close</th>
                <th>Current turn</th>
                <th>status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for device in devices %}
            <tr>
                <td>{{ device.deviceId }}</td>
                <td>{{ device.deviceName }}</td>
                <td>{{ device.stateName }}</td>
                <td>{{ device.deviceTypeName }}</td>
                <td>{{ device.pins|default('None') }}</td>
                <td>{{ device.turns|default('None') }}</td>
                <td>{{ device.currentTurn|default('None') }}</td>
                <td>{{ device.status ? 'Active' : 'Inactive' }}</td>
                <td>
                    <a href="{{ path('device_show', {'id': device.deviceId}) }}">show</a>
                    <a href="{{ path('device_edit', {'id': device.deviceId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('device_new') }}">Create new</a>
{% endblock %}
